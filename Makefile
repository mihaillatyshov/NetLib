# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Server_config = debug
  Client_config = debug
endif
ifeq ($(config),release)
  Server_config = release
  Client_config = release
endif

PROJECTS := Server Client

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Server:
ifneq (,$(Server_config))
	@echo "==== Building Server ($(Server_config)) ===="
	@${MAKE} --no-print-directory -C Server -f Makefile config=$(Server_config)
endif

Client:
ifneq (,$(Client_config))
	@echo "==== Building Client ($(Client_config)) ===="
	@${MAKE} --no-print-directory -C Client -f Makefile config=$(Client_config)
endif

clean:
	@${MAKE} --no-print-directory -C Server -f Makefile clean
	@${MAKE} --no-print-directory -C Client -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Server"
	@echo "   Client"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"